.Overlay
  content ''
  pointer-events none
  position absolute
  inset 0
  z-index 10000
  width 100%
  height 100%

  display grid
  grid-template \
    "header header" auto \
    "main side" 1fr \
    / auto 1fr

.Header
  grid-area header

.Main
  grid-area main
  width 100%

.Side
  grid-area side
  width 500px

.UnsetSpacing
  margin 0 !important
  padding 0 !important

.UnsetRelative
  position unset !important

.HiddenOverflow
  overflow hidden !important
